            <div class="card p-4">
                <h2 class="py-4 font-weight-bold" id="details.name">
                    <% {'name.details.name'} -%>
                </h2>
                <div class="row">
                    <!-- cart images -->
                    <div class="md-2 mx-auto ">
                        <div class="shoes-card">
                            <h1>Original Color Shoes</h1>
                            <p>Shoes with different color and background</p>
                            <div class="shoes-pic"></div>
                            <div class="shoes-colors"> <img class="blue active" data-color="#7ed6df" data-pic="url('https://live.staticflickr.com/65535/51886888830_5a1016d6d2.jpg')"></span> <span class="green" data-color="#badc58" data-pic="url('https://live.staticflickr.com/65535/51886888830_5a1016d6d2.jpg')"></span> <span class="yellow" data-color="#f9ca24" data-pic="url('https://live.staticflickr.com/65535/51886888830_5a1016d6d2.jpg')"></span> <span class="rose" data-color="#ff7979" data-pic="url('https://live.staticflickr.com/65535/51886888830_5a1016d6d2.jpg')"></span> </div>
                            <div class="shoes-info">
                                <div class="shoes-price">$90</div> <a href="#" class="shoes-button">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                    <script>

                        $(document).ready(function())
                            $(".shoes-colors span").click(function(){
                                $(".shoes-colors span").removeClass("active");
                                $(this).addClass("active");
                                $("body").css("background",$(this).attr("data-color"));
                                $(".shoes-price").css("color",$(this).attr("data-color"));
                                $(".shoes-button").css("color",$(this).attr("data-color"));
                                $(".shoes-pic").css("background-image",$(this).attr("data-pic"));
                            });
                        });


                    </script>
