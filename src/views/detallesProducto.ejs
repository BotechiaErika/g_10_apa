<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('./partials/head')%>
        <link rel=" preconnect " href="./../public/CSS/normalize.css" type="text/css">
        <link rel=" preconnect " href="./../public/CSS/style_home.css" type="text/css">
        <title>DETALLES PRODUCTO</title>

</head>

<body>
    <%- include ('./partials/navbar')%>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-11 mx-auto">
                    <div class="row mt-5 gx-3"></div>
                    <!-- left side div -->
                    <div class="col-md-12 col-lg-8 col-11 mx-auto
										main_cart mb-lg-0 mb-5">

                    </div>
                    <!-- right side div -->

                    <div class="card p-4">
                        <h2 class="py-4 font-weight-bold" id="details.name">
                            Detalles
                            <%{'name.details.name'}-%>
                        </h2>
                        <div class="row">
                            <!-- cart images -->
                            <div class="col-md-5 col-11 mx-auto
												  bg-light d-flex
												  justify-content-center
												  aligm-itens-center shadow
												  product-img" />
                            <img src="https://live.staticflickr.com/65535/51886888830_5a1016d6d2.jpg" alt="sliderDetails_product01" class="img-fluid" />
                        </div>

                        <!-- product detail cart -->
                        <div class="col-md-7 col-11 mx-auto px-4
												  mt-2">
                            <div class="row">
                                <!-- product name -->
                                <div class="col-6 card-title">
                                    <div class="mb-4
																  product_name">ITEN 01:<br /> Platinum Hotel</div>
                                    <p class="mb-2
																		text-muted">TURNO - 4 HORAS</p>
                                    <p class="mb-2
																		text-muted">DESCUENTO APA! 10% VALOR TURNO</p>
                                    <p class="mb-2
																		text-muted">VALIDO en FECHA SELECCIONADA
                                    </p>
                                </div>


                                <!-- quantidade incremento y demencremento -->
                                <div class="col-6">
                                    <ul class="pagination
																		pagination-sm
																		justify-content-end
																		set_quantity">
                                        <li class="page-item">
                                            <button class="page-link" onclick="decreaseNumber()">
												  <i class="bi
																						bi-dash-square-fill"></i></button></li>
                                        <li class="page-item"><input type="text" name="" class="page-link" value="1" id="textbox">
                                        </li>
                                        <li class="page-item">
                                            <button class="page-link" onclick="increaseNumber()"><i class="bi
																						bi-plus-square-fill"></i></button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- remover mover itens e precio -->
                            <div class="row">
                                <div class="col-8 d-flex
																  justify-content-between
																  remove_wish"></div>

                                <p class="remove_item"><i class="bi
																		bi-trash-fill"></i>Remover √çtem
                                </p>
                                <p class="agregar_favoritos"><i class="bi
																		bi-bookmark-heart"></i> Agregar a Favoritos</p>
                            </div>
                            <div class="col-4 d-flex
															 justify-content-end
															 price_money"></div>
                            <h3>$ <span id="itemval">3000</span>(pesos)</h3>
                        </div>

                    </div>
                </div>
            </div>


            <%- include ('./partials/footer')%>

                <!-- JavaScript Bundle with Popper -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>

</html>